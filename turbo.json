{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": [".env"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "env": ["NODE_ENV"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "tsc": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputLogs": "errors-only"
    },
    "start": {
      "cache": true
    },
    "start:watch": {
      "cache": true,
      "persistent": true
    },
    "lint": {
      "outputLogs": "errors-only"
    },
    "lint:fix": {
      "outputLogs": "errors-only"
    },
    "test": {
      "cache": true,
      "outputLogs": "errors-only"
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^test"],
      "cache": true
    }
  }
}
