{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "Preserve",
    "noEmit": true,
    "outDir": "dist",
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true
  }
}
